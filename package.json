{
  "name": "notify-php-release-action",
  "version": "1.0.0",
  "description": "A GitHub Action to automatically creates an issue when a new version of PHP is released. ",
  "keywords": [
    "github-action"
  ],
  "homepage": "https://github.com/nulxrd/notify-php-release-action#readme",
  "bugs": {
    "url": "https://github.com/nulxrd/notify-php-release-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nulxrd/notify-php-release-action.git"
  },
  "license": "MIT",
  "author": {
    "name": "Dominik Szamburski",
    "email": "dominikszamburski99@gmail.com",
    "url": "https://github.com/nulxrd"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "bundle": "npm run lint && npm run build",
    "build": "ncc build ./src/index.ts -o dist --source-map --minify --license licenses.txt",
    "build:watch": "ncc build ./src/index.ts -o dist --source-map --watch",
    "lint": "eslint .",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "3.3.2",
    "prettier-eslint": "^16.3.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1"
  }
}
